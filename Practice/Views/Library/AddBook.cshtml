@model Practice.Models.Publication

@{
    ViewBag.Title = "AddBook";
}

<link href="~/Content/themes/MyStyles.css" rel="stylesheet" />
<style>
    body {
        background: #ffffec;
        background-image: url(../../Content/themes/base/images/Библиотека.jpg);
        background-repeat: no-repeat;
        background-position: top center;
        background-size: cover;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<body>
    <div class="Mainpart" style="width:500px">
        <div class="form-horizontal">
            <h2 style="text-align:center"><b>Добавление книги</b></h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Название книги*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Оно" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BBK, "ББК*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.BBK, new { htmlAttributes = new { @class = "form-control", @placeholder = "81.2Англ" } })
                    @Html.ValidationMessageFor(model => model.BBK, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UDK, "УДК*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.UDK, new { htmlAttributes = new { @class = "form-control", @placeholder = "81.2" } })
                    @Html.ValidationMessageFor(model => model.UDK, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Author, "Автор книги*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", @placeholder = "Стивен Кинг" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ISBN, "ISBN*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control", @placeholder = "978-5-17-065495-6" } })
                    @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Page_Count, "Количество страниц*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Page_Count, new { htmlAttributes = new { @class = "form-control", @placeholder = "100" } })
                    @Html.ValidationMessageFor(model => model.Page_Count, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Release_Number, "Номер выпуска: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Release_Number, new { htmlAttributes = new { @class = "form-control", @placeholder = "Выпуск №1" } })
                    @Html.ValidationMessageFor(model => model.Release_Number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Year, "Год издания*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", @placeholder = "2011" } })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Publisher, "Издатель*: ", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("Publishers", (IEnumerable<SelectListItem>)ViewData["Publishers"], new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Publisher, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <a href="/Library/BooksCollection"><input type="button" class="button" value="Отмена" style="margin-left:20px" /></a><input type="submit" value="Добавить" class="button" style="float:right; margin-right:20px" />
            </div>
            * - обязательные для заполнения поля
        </div>
        </div>
</body>
}
