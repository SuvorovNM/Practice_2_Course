@model IEnumerable<Practice.Models.Publisher>
@using Practice.Models
@{
    ViewBag.Title = "PubsCollection";
}
<link href="~/Content/themes/MyStyles.css" rel="stylesheet" />
<style>
    body {
        background: #ffffec;
        background-image: url(../../Content/themes/base/images/Библиотека.jpg);
        background-repeat: no-repeat;
        background-position: top center;
        background-size: cover;
    }
</style>
<body>
    <div class="Mainpart" style="width:800px">
        <h2 align="center"><b>Список издательств</b></h2>

        <a href="/Library/AddPub"><input type="button" class="button" value="Добавить" style="float:right" /></a>
        <br />
        <br />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Название")
                </th>
                <th>
                    @Html.DisplayName("Город")
                </th>
                <th>
                    @Html.DisplayName("Кол-во книг в библиотеке")
                </th>
                <th></th>
            </tr>

            @foreach (Publisher item in (IEnumerable<Publisher>)ViewData["Pubs"])
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Publication.Count)
                    </td>
                    <td align="right">
                        <nobr>
                            <a style="text-decoration:none;" href=@("ChangePub/"+item.Id)><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Изменить</a>
                        </nobr>
                        <br />
                        <a style="text-decoration:none;" href=@("PubInfo/"+item.Id)><i class="fa fa-id-card-o " aria-hidden="true"></i> Подробнее</a>
                        <br />
                    </td>
                </tr>
            }

        </table>
    </div>
    </body>
