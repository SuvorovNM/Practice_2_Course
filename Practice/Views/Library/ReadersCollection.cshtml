@using Practice.Models
@model IEnumerable<Practice.Models.Reader>

@{
    ViewBag.Title = "Список читателей";
}

<h2>BooksCollection</h2>

<p>
    @Html.ActionLink("Добавить нового читателя", "AddReader")
</p>
<form method="post" action="">
    <table>
        <tr><td><p>Фильтры</p></td></tr>
        <tr>
            <td>Читательский билет: </td>
            <td><input type="text" name="Library_Card" placeholder="Номер Чит. Билета" /></td>
            <td><input type="checkbox" name="CB_Library_Card" value="true" /></td>
        </tr>
        <tr><td><p> </p></td></tr>
        <tr>
            <td>Имя: </td>
            <td><p><input type="text" name="FIO" placeholder="ФИО" /></p></td>
            <td><input type="checkbox" name="CB_FIO" value="true" /></td>
        </tr>
        <tr>
            <td>Дата рождения: </td>
            <td><p><input type="date" name="Birthday" /></p></td>
            <td><input type="checkbox" name="CB_Birth" value="true" /></td>
        </tr>
        <tr>
            <td>Номер телефона: </td>
            <td><p><input type="text" name="Phone_Number" /></p></td>
            <td><input type="checkbox" name="CB_Phone" value="true" /></td>
        </tr>
        <tr>
            <td>Дата регистрации: </td>
            <td><p><input type="date" name="Registration_Date" /></p></td>
            <td><input type="checkbox" name="CB_Reg" value="true" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Поиск" /></td>
        </tr>
    </table>
</form>
<br />

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ФИО")
        </th>
        <th>
            @Html.DisplayName("Читательский билет")
        </th>
        <th>
            @Html.DisplayName("Дата рождения")
        </th>
        <th>
            @Html.DisplayName("Телефон")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Дата регистрации")
        </th>
        <th></th>
    </tr>

    @foreach (Reader item in (IEnumerable<Reader>)ViewData["Readers"])
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Library_Card)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registration_Date)
            </td>
            <td>
                @Html.ActionLink("Изменить", "ChangeReader", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeleteReader", new { id = item.Id })
            </td>
        </tr>
    }

</table>

