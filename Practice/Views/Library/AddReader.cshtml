                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Address.Flat, "Номер квартиры: ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Address.Flat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address.Flat, "Номер квартиры может содержать только цифры", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <a href="/Library/ReadersCollection"><input type="button" class="button" value="Отмена" style="margin-left:20px" /></a><input type="submit" value="Добавить" class="button" style="float:right; margin-right:20px" />

                </div>
            </div>
        </div>
    </body>
}
