@model Practice.Models.Librarian


<div class="form-horizontal">
    <h4>Reader</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Staff_Number, "Штатный номер: ", htmlAttributes: new { @class = "control-label col-md-2" })
